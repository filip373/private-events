<h1>User</h1>
<div>Email: <%= @user.email %></div>
<% if @user.created_events.any? %>
  <div>Created events (<%= @user.created_events.count %>):</div>
  <ul>
    <% @user.created_events.each do |event| %>
      <li>
        <%= render(event) %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if @user.attended_events.any? %>
  <div>Previously attended events (<%= @previous_events.count %>):</div>
  <ul>
    <% @previous_events.each do |event| %>
      <li>
        <%= render(event) %>
      </li>
    <% end %>
  </ul>
  <div>Upcoming attended events (<%= @upcoming_events.count %>):</div>
  <ul>
    <% @upcoming_events.each do |event| %>
      <li>
        <%= render(event) %>
      </li>
    <% end %>
  </ul>
<% end %>
